{
  "manifest_version": 2,
  "name": "DLsite Work Info",
  "description": "Get data strings from DLsite work pages.",
  "version": "1.0",
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://www.dlsite.com/*/work/*",
        "http://www.dlsite.com/*/announce/*"
      ],
      "css": [
        "includes/layer/skin/default/layer.css",
        "dlsite-work-info.css"
      ],
      "js": [
        "includes/jquery/jquery-3.2.1.min.js",
        "includes/layer/layer.js",
        "dlsite-work-info.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "http://www.dlsite.com/*/mypage/wishlist",
        "http://www.dlsite.com/*/mypage/wishlist/*"
      ],
      "css": [
        "includes/layer/skin/default/layer.css",
        "dlsite-work-info.css",
        "dlsite-wishlist-helper.css"
      ],
      "js": [
        "includes/jquery/jquery-3.2.1.min.js",
        "includes/layer/layer.js",
        "dlsite-wishlist-helper.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://sukebei.nyaa.si/view/*"
      ],
      "css": [
        "nyaa-helper.css"
      ],
      "js": [
        "includes/jquery/jquery-3.2.1.min.js",
        "nyaa-helper.js"
      ],
      "run_at": "document_end"
    }
  ]
}